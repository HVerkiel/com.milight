{
  "id": "com.milight",
  "version": "0.0.2",
  "compatibility": "0.x || 1.x",
  "category": "lights",
  "name": {
    "en": "MiLight (easybulb)",
    "nl": "MiLight (easybulb)"
  },
  "description": {
    "en": "Connect your MiLight (easybulb) lamps with Homey",
    "nl": "Verbind je MiLight (easybulb) lampen met Homey"
  },
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "drivers": [
    {
      "id": "rgb_bulb",
      "name": {
        "en": "MiLight RGB Bulb",
        "nl": "MiLight RGB Lamp"
      },
      "images": {
        "large": "./drivers/socket/assets/images/large.jpg",
        "small": "./drivers/socket/assets/images/small.jpg"
      },
      "class": "light",
      "capabilities": [ "onoff", "dim", "hue" ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "white_bulb",
      "name": {
        "en": "MiLight White Bulb",
        "nl": "MiLight Witte Lamp"
      },
      "images": {
        "large": "./drivers/socket/assets/images/large.jpg",
        "small": "./drivers/socket/assets/images/small.jpg"
      },
      "class": "light",
      "capabilities": [ "onoff", "dim", "light_temperature" ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "dependencies": {
    "node-milight-promise": "0.0.4"
  }
}