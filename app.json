{
  "id": "com.milight",
  "version": "1.2.1",
  "compatibility": "0.x || 1.x",
  "category": "lights",
  "name": {
    "en": "Milight (EasyBulb)",
    "nl": "Milight (EasyBulb)"
  },
  "description": {
    "en": "Connect your Milight (EasyBulb) light bulbs with Homey",
    "nl": "Verbind je Milight (EasyBulb) lampen met Homey"
  },
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "drivers": [
    {
      "id": "rgbw_bulb",
      "name": {
        "en": "RGBW Bulb",
        "nl": "RGBW Lamp"
      },
      "images": {
        "large": "./drivers/rgb_bulb/assets/images/large.jpg",
        "small": "./drivers/rgb_bulb/assets/images/small.jpg"
      },
      "class": "light",
      "capabilities": [ "onoff", "dim", "light_hue", "light_temperature" ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "rgb_bulb",
      "name": {
        "en": "RGB Bulb",
        "nl": "RGB Lamp"
      },
      "images": {
        "large": "./drivers/rgb_bulb/assets/images/large.jpg",
        "small": "./drivers/rgb_bulb/assets/images/small.jpg"
      },
      "class": "light",
      "capabilities": [ "onoff", "dim", "light_hue" ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
        "settings": [
        {
          "type": "group",
            "label": {
                "en": "General settings",
                "nl": "Algemene instellingen"
            },
          "children": [
            {
              "id": "fade_speed",
              "type": "number",
              "label": {
                  "en": "Fade speed (0 - 6)",
                  "nl": "Snelheid van vervagen (0 - 6)"
              },
              "value": 1,
              "attr": {
                  "min": 0,
                  "max": 6
              }
            }
          ]
        }
      ]
    },
    {
      "id": "white_bulb",
      "name": {
        "en": "White Bulb",
        "nl": "Witte Lamp"
      },
      "images": {
        "large": "./drivers/white_bulb/assets/images/large.jpg",
        "small": "./drivers/white_bulb/assets/images/small.jpg"
      },
      "class": "light",
      "capabilities": [ "onoff", "dim", "light_temperature" ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
            "label": {
                "en": "General settings",
                "nl": "Algemene instellingen"
            },
          "children": [
            {
              "id": "fade_speed",
              "type": "number",
              "label": {
                  "en": "Fade speed (0 - 6)",
                  "nl": "Snelheid van vervagen (0 - 6)"
              },
              "value": 1,
              "attr": {
                  "min": 0,
                  "max": 6
              }
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "node-milight-promise": "0.0.4"
  }
}